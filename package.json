{
	"name": "mock-iot",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"dev": "sst dev",
		"build": "sst build",
		"start": "sst start",
		"lint": "lint",
		"compile": "bun run -T tsc --build --verbose",
		"format": "prettier --write .",
		"tc:root": "vitest --typecheck --exclude '**/{test,integ}.*' --run",
