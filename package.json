		"typecheck": "bun tc:root && bun tc:frontend"
	},
	"devDependencies": {
		"@types/aws-lambda": "^8.10.130",
		"@types/bun": "^1.1.10",
		"dotenv": "^16.3.1",
		"typescript": "^5.3.3",
		"vitest": "^1.1.1"
	},
	"workspaces": [
		"packages/*"
	],
	"dependencies": {
		"@aws-sdk/client-iot-data-plane": "^3.665.0",
		"@aws-sdk/client-kinesis": "^3.665.0",
		"mqtt": "^5.10.1",
		"sst": "^3.1.64"
	}
}
